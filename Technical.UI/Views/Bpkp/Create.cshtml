@model Technical.UI.Models.BpkpCreateDto
@{
    ViewData["Title"] = "Create Bpkp";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Create Bpkp</h1>
    </div>
</div>
<div class="container py-5">
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label class="form-label">Agreement Number</label>
            <input type="text" class="form-control" asp-for="AgreementNumber" />
            <span class="text-danger" asp-validation-for="AgreementNumber"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Branch ID</label>
            <input type="text" class="form-control" asp-for="BranchId" />
            <span class="text-danger" asp-validation-for="BranchId"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Bpkb Number</label>
            <input type="text" class="form-control" asp-for="BpkbNo" />
            <span class="text-danger" asp-validation-for="BpkbNo"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Bpkb Date In</label>
            <input type="date" class="form-control" asp-for="BpkbDateIn" />
            <span class="text-danger" asp-validation-for="BpkbDateIn"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Bpkb Date</label>
            <input type="date" class="form-control" asp-for="BpkbDate" />
            <span class="text-danger" asp-validation-for="BpkbDate"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Faktur Number</label>
            <input type="text" class="form-control" asp-for="FakturNo" />
            <span class="text-danger" asp-validation-for="FakturNo"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Faktur Date</label>
            <input type="date" class="form-control" asp-for="FakturDate" />
            <span class="text-danger" asp-validation-for="FakturDate"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Police Number</label>
            <input type="text" class="form-control" asp-for="PoliceNo" />
            <span class="text-danger" asp-validation-for="PoliceNo"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Location</label>
            <select class="form-select" name="LocationId" required>
                @foreach (var location in ViewBag.Locations as List<SelectListItem>)
                {
                    <option value="@location.Value">@location.Text</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
